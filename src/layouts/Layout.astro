---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body class="bg-[#F7F9F2]">
		<slot />
		<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	html {
  scroll-behavior: smooth;
}
	.home-section {
            height: 100%; /* Ajustar seg√∫n sea necesario */
            position: relative;
            overflow: hidden;
			cursor: pointer;
        }

        .home-section .img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: opacity 0.3s ease;
        }

        .home-section video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0; /* Oculto inicialmente */
            transition: opacity 0.3s ease;
        }

        .home-section:hover .img {
            opacity: 0; /* Desvanecer imagen al hacer hover */
        }

        .home-section:hover video {
            opacity: 1; /* Mostrar video al hacer hover */
        }

        .content {
            position: absolute;
            top: 70%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
        }

        .button {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 20px;
            border-radius: 5px;
            margin-top: 10px;
        }
		.no-wrap {
    white-space: nowrap;
}
.pt-30p {
    padding-top: 5%;
}
</style>
